<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/map_backgound"
    tools:context="org.apache.cordova.shake.Mpa.SingCountMapActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/bar"
        android:background="#53afff"
        >
        <ImageView
            android:id="@+id/back_btn"
            android:contentDescription="imagetBtn"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentLeft="true"

            android:src="@drawable/back_arrow" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="160dp"
                >
                <Button
                    android:id="@+id/left_btn"
                    android:layout_width="40dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="2dp"

                    android:layout_gravity="start|center_vertical"
                    android:background="@drawable/left"
                    />
                <TextView
                    android:id="@+id/title_btn"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:textSize="7pt"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:background="#53afff"
                    />
                <Button
                    android:id="@+id/right_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:width="10dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/right"
                    />
            </FrameLayout>
    </FrameLayout>

    <com.amap.api.maps2d.MapView
        android:id="@+id/singmap"
        android:layout_below="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alwaysDrawnWithCache="true"
        >
    </com.amap.api.maps2d.MapView>

    <include
        android:visibility="visible"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        layout="@layout/fullscreen_loading_indicator"
        >
    </include>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="#faf7f8"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:layout_marginBottom="0dp"
        >

    <TextView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/textcorner"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/rect"
        android:gravity="center|left"
        />
        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/timeView"
            android:textColor="#080808"
            android:gravity="center|left"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="#53afff"
            android:layout_marginLeft="90dp"
            android:id="@+id/line"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:id="@+id/addressView"
            android:textColor="#080808"
            android:layout_marginTop="5dp"
            android:lines="2"
            android:gravity="center|left"
            />
    </FrameLayout>

</RelativeLayout>
