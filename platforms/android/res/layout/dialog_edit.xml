<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_20dp"
    android:paddingRight="@dimen/margin_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_corner_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_18dp"
            android:layout_marginTop="@dimen/margin_22dp"
            android:gravity="center"
            android:text="@string/set_signin_address_name"
            android:textColor="@color/black"
            android:textSize="@dimen/size_17sp" />

        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:background="@drawable/edittext_bg"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:maxLength="50"
            android:maxLines="2"
            android:padding="@dimen/margin_10dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_14sp"
            tools:text="深圳市龙岗区坂田街道办和磡区" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dp"
            android:layout_marginTop="@dimen/margin_25dp"
            android:background="@color/color_f5f5f5" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/but_left_bg"
                android:gravity="center"
                android:text="@string/button_cancel"
                android:textColor="@color/color_53afff"
                android:textSize="@dimen/size_16sp" />

            <View
                android:layout_width="@dimen/margin_0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_f5f5f5" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/but_right_bg"
                android:gravity="center"
                android:text="@string/button_ok"
                android:textColor="@color/color_53afff"
                android:textSize="@dimen/size_16sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>