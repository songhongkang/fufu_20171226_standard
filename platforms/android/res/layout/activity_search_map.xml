<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/map_backgound"
    android:id="@+id/searchmap"
    tools:context="org.apache.cordova.shake.Mpa.SearchMapActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:id="@+id/bar"
    android:background="#53afff"
    >
        <ImageView
            android:id="@+id/left_btn"
            android:contentDescription="imagetBtn"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center_vertical"

            android:src="@drawable/back_arrow" />

        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="地图"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <TextView android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="8dp"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </FrameLayout>

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_below="@+id/bar"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alwaysDrawnWithCache="true"
        >
    </com.amap.api.maps2d.MapView>

    <org.apache.cordova.shake.Mpa.CustomerSearchBar
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/searchbar"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="12dp"
        style="@style/StyleEditText"
        android:layout_marginTop="50dp"
        android:gravity="top"
        android:layout_marginLeft="12dp"
        ></org.apache.cordova.shake.Mpa.CustomerSearchBar>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/clearImg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="14dp"
        android:gravity="top"
        android:src="@drawable/deleate"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/cancel"
        android:paddingTop="10dp"

        android:layout_alignParentRight="true"
        android:text="取消"
        android:textSize="14sp"
        android:textColor="#f9f5f5"
        android:gravity="top"
        />

    <org.apache.cordova.shake.Mpa.CustomerView
        android:id="@+id/loadView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:visibility="invisible"
        android:background="#f7f4f4">

    </org.apache.cordova.shake.Mpa.CustomerView>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/bar"
        android:cacheColorHint="#00000000"
        android:divider="#FFE7E7E7"
        android:dividerHeight="0.5dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        ptr:ptrMode="pullFromEnd">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/map"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:id="@+id/checkAddress"
        android:text="使用当前地址"
        android:textSize="16sp"
        android:background="#fdfdfd"
        android:textColor="@color/contents_text"
        />

</RelativeLayout>
