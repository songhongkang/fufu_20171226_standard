<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_20dp"
    android:paddingRight="@dimen/margin_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_corner_view"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_20dp"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="@dimen/size_17sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_15sp"
            android:lineSpacingExtra="8dp"
            tools:text="请在设置中开启GPS定位功能" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dp"
            android:layout_marginTop="@dimen/margin_22dp"
            android:background="@color/color_e5e5e5" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <!--<TextView-->
            <!--android:id="@+id/no"-->
            <!--android:gravity="center"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:textSize="20dp"-->
            <!--android:textColor="#CCCCCC"-->
            <!--android:background="@drawable/but_bg"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="取消"/>-->

            <!--<View-->
            <!--android:layout_width="0.5dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#EEA2AD"/>-->

            <TextView
                android:id="@+id/yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/but_bg"
                android:gravity="center"
                android:text="@string/open_rightnow"
                android:textColor="@color/color_53afff"
                android:textSize="@dimen/size_16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>